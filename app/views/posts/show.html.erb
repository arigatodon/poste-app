<p id="notice"><%= notice %></p>


 <h2> <%= @post.title %></h2>
<div class="container">
  <%= image_tag(@post.image) %>
 </div>
 <div class="container">
  <%= @post.content %>
 </div>
 <div class="container">
  <%= @post.phone %>
  </div>
 <div class="container">
  <%= @post.address %>
</div>
<div class="container">
<%= link_to like_post_path(@post), method: :put do %>
 <%= image_tag("like.jpg", class: 'potito') %> 
  <%= @post.get_upvotes.size %>
<% end %>

<%= link_to dislike_post_path(@post), method: :put do %>
  <%= image_tag("dislike.jpg", class: 'potito') %> 
  <%= @post.get_downvotes.size %>
<% end %>
</div>

<% if current_user %>
  <%= link_to "favorite",   favorite_post_path(@post, type: "favorite"), method: :put %>
  <%= link_to "unfavorite", favorite_post_path(@post, type: "unfavorite"), method: :put %>
<% end %>
<div class="container">
<%= link_to 'Edit', edit_post_path(@post) %> 

<%= link_to 'Back', posts_path %>
</div>

<div class="container">
<%= render partial: "comments/form" %>
<hr>
<%= render partial: "comments/comment", collection: @comments %>
</div>
