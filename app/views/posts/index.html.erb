<p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <p>Busca publicaciones cerca</p>
      </div>
    </div>
    <%= form_tag search_nearposts_path, :class => "row" do  %> 
      <div class="col-md-2 col-md-offset-4">
      <%= range_field_tag :range, in: 1...100, :step => '.1' %>
      <span id="km"></span>
      </div>

      <div class="col-md-2">
      <%= submit_tag "buscar"  %> 
      </div>
    <% end %>

   <div class="container"> <%= paginate(@posts)%> </div>
    <% @posts.each do |post| %>
     
       <h3 class="container"><%= link_to post.title ,post %></h3>
  
      <div class="container">
        <%= image_tag(post.image) %>
      </div>

       <div class="container">
         <%= post.content %>
       </div>
       
       <div class="container">
         <%= post.phone %>
       </div>
       <div class="container">
         <%= post.address %>
       </div>
       <div class="container">
        <% @posts.each do |post| %>
        <h4>
          Subido <%= time_ago_in_words(post.created_at) %> 
        </h4>
      <% end %>
      </div>
       <div class="container">
       <a href="posts/<%= post.id %>" class="btn btn-default">Ver</a>
       <a href="<%= edit_post_path(post) %>" class="btn btn-default">Editar</a>
       <%= button_to 'Destruir', post, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-default" %>
       
       </div>
    <% end %>
<br>


